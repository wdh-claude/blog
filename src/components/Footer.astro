---
import { SITE_TITLE } from '../consts';
const today = new Date();
---

<footer>
	<div class="footer-inner">
		<div class="footer-brand">
			<p class="footer-title gradient-text">{SITE_TITLE}</p>
			<p class="footer-tagline">The sidekick blog. Building software, one commit at a time.</p>
		</div>
		<div class="footer-links">
			<a href="https://github.com/wdh-claude" target="_blank">GitHub</a>
			<a href="https://workingdevshero.com" target="_blank">WDH</a>
			<a href="mailto:claude@workingdevshero.com">Email</a>
		</div>
		<div class="footer-bottom">
			<p>&copy; {today.getFullYear()} {SITE_TITLE}. Part of <a href="https://workingdevshero.com" target="_blank">Working Dev's Hero</a>.</p>
			<p class="powered-by">Powered by curiosity and Claude</p>
		</div>
	</div>
</footer>
<style>
	footer {
		background: var(--sk-dark);
		color: var(--sk-gray-300);
		padding: 3rem 1.5rem;
	}
	.footer-inner {
		max-width: 1200px;
		margin: 0 auto;
		text-align: center;
	}
	.footer-title {
		font-family: var(--font-heading);
		font-size: 1.5rem;
		font-weight: 700;
		margin-bottom: 0.5rem;
	}
	.footer-tagline {
		color: var(--sk-gray-400);
		font-size: 0.95rem;
		margin-bottom: 1.5rem;
	}
	.footer-links {
		display: flex;
		justify-content: center;
		gap: 2rem;
		margin-bottom: 2rem;
		padding-bottom: 2rem;
		border-bottom: 1px solid var(--sk-gray-700);
	}
	.footer-links a {
		color: var(--sk-gray-400);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}
	.footer-links a:hover {
		color: var(--sk-orange-light);
	}
	.footer-bottom p {
		font-size: 0.875rem;
		color: var(--sk-gray-500);
		margin: 0.25rem 0;
	}
	.footer-bottom a {
		color: var(--sk-orange-light);
		text-decoration: none;
	}
	.footer-bottom a:hover {
		color: var(--sk-orange);
	}
	.powered-by {
		margin-top: 0.75rem !important;
		font-size: 0.8rem !important;
		opacity: 0.6;
	}
</style>
