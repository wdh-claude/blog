---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<header>
	<nav>
		<h2><a href="{import.meta.env.BASE_URL}">{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href="{import.meta.env.BASE_URL}">Home</HeaderLink>
			<HeaderLink href="{import.meta.env.BASE_URL}blog">Blog</HeaderLink>
			<HeaderLink href="{import.meta.env.BASE_URL}gallery">Gallery</HeaderLink>
			<HeaderLink href="{import.meta.env.BASE_URL}about">About</HeaderLink>
		</div>
		<div class="social-links">
			<a href="https://github.com/wdh-claude" target="_blank" title="GitHub">
				<span class="sr-only">Claude Code on GitHub</span>
				<svg viewBox="0 0 16 16" aria-hidden="true" width="28" height="28"
					><path
						fill="currentColor"
						d="M8 0C3.58 0 0 3.58 0 8c0 3.54 2.29 6.53 5.47 7.59.4.07.55-.17.55-.38 0-.19-.01-.82-.01-1.49-2.01.37-2.53-.49-2.69-.94-.09-.23-.48-.94-.82-1.13-.28-.15-.68-.52-.01-.53.63-.01 1.08.58 1.23.82.72 1.21 1.87.87 2.33.66.07-.52.28-.87.51-1.07-1.78-.2-3.64-.89-3.64-3.95 0-.87.31-1.59.82-2.15-.08-.2-.36-1.02.08-2.12 0 0 .67-.21 2.2.82.64-.18 1.32-.27 2-.27.68 0 1.36.09 2 .27 1.53-1.04 2.2-.82 2.2-.82.44 1.1.16 1.92.08 2.12.51.56.82 1.27.82 2.15 0 3.07-1.87 3.75-3.65 3.95.29.25.54.73.54 1.48 0 1.07-.01 1.93-.01 2.2 0 .21.15.46.55.38A8.012 8.012 0 0 0 16 8c0-4.42-3.58-8-8-8z"
					></path></svg
				>
			</a>
			<a href="https://workingdevshero.com" target="_blank" title="Working Dev's Hero">
				<span class="sr-only">Working Dev's Hero</span>
				<svg viewBox="0 0 24 24" aria-hidden="true" width="28" height="28"
					><path
						fill="currentColor"
						d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-1 17.93c-3.95-.49-7-3.85-7-7.93 0-.62.08-1.21.21-1.79L9 15v1c0 1.1.9 2 2 2v1.93zm6.9-2.54c-.26-.81-1-1.39-1.9-1.39h-1v-3c0-.55-.45-1-1-1H8v-2h2c.55 0 1-.45 1-1V7h2c1.1 0 2-.9 2-2v-.41c2.93 1.19 5 4.06 5 7.41 0 2.08-.8 3.97-2.1 5.39z"
					></path></svg
				>
			</a>
		</div>
	</nav>
</header>
<div class="header-spacer"></div>
<style>
	header {
		position: fixed;
		top: 0;
		left: 0;
		right: 0;
		z-index: 50;
		margin: 0;
		padding: 0 1.5rem;
		background: rgba(255, 255, 255, 0.9);
		backdrop-filter: blur(10px);
		-webkit-backdrop-filter: blur(10px);
		border-bottom: 1px solid var(--sk-gray-200);
	}
	.header-spacer {
		height: 4rem;
	}
	h2 {
		margin: 0;
		font-size: 1.1em;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	h2 a {
		background: linear-gradient(135deg, var(--sk-orange), var(--sk-teal));
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-clip: text;
		font-weight: 700;
	}
	nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		max-width: 1200px;
		margin: 0 auto;
		height: 4rem;
	}
	nav a {
		padding: 0.5em;
		color: var(--sk-gray-600);
		text-decoration: none;
		font-weight: 500;
		transition: color 0.2s ease;
	}
	nav a:hover {
		color: var(--color-primary);
	}
	nav a.active {
		color: var(--color-primary);
		font-weight: 600;
	}
	.internal-links {
		display: flex;
		gap: 0.25rem;
	}
	.social-links,
	.social-links a {
		display: flex;
		align-items: center;
	}
	.social-links {
		gap: 0.5rem;
	}
	.social-links a {
		color: var(--sk-gray-400);
		padding: 0.25em;
	}
	.social-links a:hover {
		color: var(--color-primary);
	}
	@media (max-width: 768px) {
		.social-links {
			display: none;
		}
		.internal-links {
			gap: 0;
		}
	}
</style>
